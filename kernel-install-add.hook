[Trigger]
Operation = Install
Operation = Upgrade
Type = Path
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Installing kernel and initrd to /boot...
Exec = /bin/sh -c 'while read -r version; do version=${version#*modules/}; version=${version%*/vmlinuz}; kernel-install add $version /lib/modules/$version/vmlinuz; done'
When = PostTransaction
NeedsTargets
