[Trigger]
Operation = Remove
Operation = Upgrade
Type = Path
Target = usr/lib/modules/*/vmlinuz

[Action]
Description = Removing kernel and initrd from /boot...
Exec = /bin/sh -c 'while read -r version; do version=${version#*modules/}; version=${version%*/vmlinuz}; kernel-install remove $version; done'
When = PreTransaction
NeedsTargets
